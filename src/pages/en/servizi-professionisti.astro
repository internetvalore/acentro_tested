---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ServiceDetailHeader from '../../components/ServiceDetailHeader.astro';
import ServiceDetailBox from '../../components/ServiceDetailBox.astro';
---

<Layout title="Professional Services - Acentro Services">
  <Header />
  
  <ServiceDetailHeader 
    title="Professional Services" 
    description="Dedicated solutions for Notaries and Accountants"
    icon="/images/service-icon-2.svg"
  />
  
  <section class="service-detail-section">
    <div class="container">
      <div class="service-intro">
        <p>
          <strong>Acentro Services</strong> offers specialized services for professionals, with dedicated solutions for <strong>Notaries</strong> and <strong>Accountants</strong>, 
          ensuring complete and professional assistance for all their needs.
        </p>
      </div>
      
      <div class="service-category">
        <h2>Services for Notaries</h2>
        <div class="service-boxes">
          <ServiceDetailBox 
            title="Annotations" 
            description="Complete management of annotation practices in competent registers."
            icon="/images/service-icon-1.svg"
          />
          
          <ServiceDetailBox 
            title="Transcriptions" 
            description="Assistance with transcription of notarial deeds at Land Registries."
            icon="/images/service-icon-2.svg"
          />
          
          <ServiceDetailBox 
            title="Unico" 
            description="Support in managing and submitting the Unico Model."
            icon="/images/service-icon-3.svg"
          />
          
          <ServiceDetailBox 
            title="Unimod" 
            description="Assistance in completing and submitting the Unimod model."
            icon="/images/service-icon-1.svg"
          />
          
          <ServiceDetailBox 
            title="Voltura 2.0" 
            description="Complete support for cadastral transfer practices with the new Voltura 2.0 system."
            icon="/images/service-icon-2.svg"
          />
        </div>
      </div>
      
      <div class="service-category">
        <h2>Services for Accountants</h2>
        <div class="service-boxes">
          <ServiceDetailBox 
            title="Business Register Document Filing" 
            description="Complete assistance for filing documents with the Business Register."
            icon="/images/service-icon-3.svg"
          />
          
          <ServiceDetailBox 
            title="SCIA Management" 
            description="Support in preparing and submitting the Certified Report of Business Commencement."
            icon="/images/service-icon-1.svg"
          />
          
          <ServiceDetailBox 
            title="Electronic Practices" 
            description="Complete management of electronic practices with public entities."
            icon="/images/service-icon-2.svg"
          />
        </div>
      </div>
      
      <div class="service-cta">
        <h3>Are you a professional needing support?</h3>
        <p>Contact us for a personalized consultation and discover how we can help you manage your practices efficiently.</p>
        <a href="/en/contattaci" class="btn btn-primary">Request Information</a>
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>

<style>
  .service-detail-section {
    padding: 4rem 0;
    background-color: var(--light-bg);
  }
  
  .service-intro {
    max-width: 900px;
    margin: 0 auto 3rem;
    text-align: center;
  }
  
  .service-intro p {
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
  }
  
  .service-category {
    margin-bottom: 3rem;
  }
  
  .service-category h2 {
    color: var(--primary-color);
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.8rem;
  }
  
  .service-boxes {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .service-cta {
    background-color: white;
    border-radius: 8px;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }
  
  .service-cta h3 {
    color: var(--primary-color);
    margin-bottom: 1rem;
  }
  
  .service-cta p {
    margin-bottom: 1.5rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }
  
  @media (max-width: 992px) {
    .service-boxes {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 576px) {
    .service-boxes {
      grid-template-columns: 1fr;
    }
  }
</style>
